<div class="container">
    <div class="raw">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            
            <div class="form-group">
                <label for="nameTextField"></label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Edit Book Name"
                name="name"
                value="<%= book.name %>"
                 required>
            </div>

            <div class="form-group">
                <label for="authorTextField"></label>
                <input type="text" class="form-control"
                id="authorTextField"
                placeholder="Enter Author Number"
                name="author"
                value="<%= book.author %>"
                required>
            </div>

            <div class="form-group">
                <label for="publishedTextField"></label>
                <input type="text" class="form-control"
                id="publishedTextField"
                placeholder="Enter Published year"
                name="published" 
                value="<%= book.published %>"
                required>
            </div>

            <div class="form-group">
                <label for="descriptionTextField"></label>
                <input type="text" class="form-control"
                id="descriptionTextField"
                placeholder="Enter Description"
                name="description" 
                value="<%= book.description %>"
                required>
            </div>

            <div class="form-group">
                <label for="priceTextField"></label>
                <input type="number" class="form-control"
                id="priceTextField"
                placeholder="Enter Price"
                name="price" 
                value="<%= book.price %>"
                required>
            </div>

            <button class="btb btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit
            </button>

            <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
    </div>
</div>

